<!-- MODAL PARA ACTUALIZAR UN PRODUCTO -->
<!-- Modal -->
<div
  class="modal fade"
  id="actualizarProducto<%=dato%>"
  tabindex="-1"
  aria-labelledby="actualizarProducto<%=dato%>"
  aria-hidden="true"
>
<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="actualizarProducto<%=dato%>">Actualizar Producto</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form action="/Productos/update" method="post">
            <div class="form-group">
                <label for="id">ID</label>
                <input type="text" id="id" name="id" class="form-control" value="<%=productos[dato].producto_id%>"  readonly="readonly">
            </div>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" class="form-control" value="<%=productos[dato].producto_nombre%>">
            </div>
            <div class="form-group">
                <label for="descripcion">Descripcion</label>
                <input type="text" id="descripcion" name="descripcion" class="form-control" value="<%=productos[dato].producto_descripcion%>" >
            </div>
            <div class="form-group">
                <label for="precio">Precio</label>
                <input type="text" id="precio" name="precio" class="form-control" value="<%=productos[dato].producto_precio%>">
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Actualizar Producto</button>
            </div>
        </form>
    </div>
  </div>
</div>